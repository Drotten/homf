{
   "info": {
      "name": "Hearthlings of Many Faces",
      "namespace": "homf",
      "version": 3
   },

   "default_locale": "en",
   "server_init_script": "file(server_init)",

   "mixintos": {
      "/stonehearth/locales/en.json": "file(locales/en_fix.json)"
   },

   "functions": {
      "add_customizer": {
         "controller": "file(call_handlers/customizer_call_handler.lua)",
         "endpoint"  : "server"
      },
      "get_tracker": {
         "controller": "file(call_handlers/customizer_call_handler.lua)",
         "endpoint"  : "server"
      },
      "start_customization": {
         "controller": "file(call_handlers/customizer_call_handler.lua)",
         "endpoint"  : "server"
      },
      "force_start_customization": {
         "controller": "file(call_handlers/customizer_call_handler.lua)",
         "endpoint"  : "server"
      },
      "randomize_hearthling": {
         "controller": "file(call_handlers/customizer_call_handler.lua)",
         "endpoint"  : "server"
      },
      "get_hearthling_name": {
         "controller": "file(call_handlers/customizer_call_handler.lua)",
         "endpoint"  : "server"
      },
      "set_hearthling_name": {
         "controller": "file(call_handlers/customizer_call_handler.lua)",
         "endpoint"  : "server"
      },
      "next_role": {
         "controller": "file(call_handlers/customizer_call_handler.lua)",
         "endpoint"  : "server"
      },
      "next_material_map": {
         "controller": "file(call_handlers/customizer_call_handler.lua)",
         "endpoint"  : "server"
      },
      "next_model": {
         "controller": "file(call_handlers/customizer_call_handler.lua)",
         "endpoint"  : "server"
      },
      "finish_customization": {
         "controller": "file(call_handlers/customizer_call_handler.lua)",
         "endpoint"  : "server"
      },

      "move_to_hearthling": {
         "controller": "file(call_handlers/hearthling_camera_call_handler.lua)",
         "endpoint"  : "client"
      },
      "follow_hearthling": {
         "controller": "file(call_handlers/hearthling_camera_call_handler.lua)",
         "endpoint"  : "client"
      },
      "stop_follow": {
         "controller": "file(call_handlers/hearthling_camera_call_handler.lua)",
         "endpoint"  : "client"
      }
   },

   "controllers": {
      "customizer": "file(services/server/customizer/customizer.lua)",
      "customizer:customize_hearthling": "file(services/server/customizer/customize_hearthling.lua)"
   },

   "client_controllers": {
      "move_rotate_to_camera_controller": "file(camera/move_rotate_to_camera_controller.lua)"
   },

   "ui": {
      "js": [
         "file(ui/init.js)",
         "file(ui/customize_hearthling/customize_hearthling.js)"
      ],
      "html": [
         "file(ui/customize_hearthling/customize_hearthling.html)"
      ],
      "less": [
         "file(ui/customize_hearthling/customize_hearthling.less)"
      ]
   }
}
